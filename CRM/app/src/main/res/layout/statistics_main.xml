<?xml version="1.0" encoding="utf-8"?>
<com.example.hmqqg.hm.view.PercentLinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <include
        android:id="@+id/top_1"
        layout="@layout/top_back"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:gravity="center"
        >

        <TextView
            android:text="2016年1月"
            android:id="@+id/popupwindow_calendar_month"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="#aa564b4b"
            android:gravity="center"
            android:textSize="18sp"
            android:layout_marginRight="20dp"/>
        <TextView
            android:gravity="center"
            android:id="@+id/text2"
            android:text="("
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
        <TextView
            android:gravity="center"
            android:text="2"
            android:id="@+id/sign_time"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
        <TextView
            android:gravity="center"
            android:id="@+id/text1"
            android:text="/"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
        <TextView
            android:gravity="center"
            android:id="@+id/text3"
            android:text="50"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
        <TextView
            android:gravity="center"
            android:id="@+id/text4"
            android:text=")"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />

    </LinearLayout>

    <com.example.hmqqg.hm.util.KCalendar
        android:id="@+id/popupwindow_calendar"
        android:layout_width="match_parent"
        android:layout_height="280dp" >
    </com.example.hmqqg.hm.util.KCalendar>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="10dp"
        />
    <android.support.design.widget.TabLayout
        app:tabIndicatorColor="#5CACEE"
        app:tabSelectedTextColor="#5CACEE"
        android:id="@+id/tabLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_heightPercent="8%">

    </android.support.design.widget.TabLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_heightPercent="1%"
        >

    </FrameLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </android.support.v4.view.ViewPager>

</com.example.hmqqg.hm.view.PercentLinearLayout>