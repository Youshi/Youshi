<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include
        android:id="@+id/top_1"
        layout="@layout/top_out"></include>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="10dp"
        android:background="#e6e6e5" />
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <!--<TableRow>-->
            <!--<TextView-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="match_parent"-->
                <!--android:text="申请人部门"-->
                <!--android:gravity="center"-->
                <!--android:textSize="16sp"-->
                <!--android:layout_weight="1"-->
                <!--android:layout_marginTop="4dp"-->
                <!--android:layout_marginBottom="4dp"-->
                <!--/>-->
            <!--<TextView-->
                <!--android:layout_width="1dp"-->
                <!--android:layout_height="match_parent"-->
                <!--android:background="#e6e6e5"-->
                <!--/>-->
            <!--<EditText-->
                <!--android:id="@+id/edit_team"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="match_parent"-->
                <!--android:background="@null"-->
                <!--android:gravity="top"-->
                <!--android:layout_weight="5"-->
                <!--/>-->

        <!--</TableRow>-->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#e6e6e5" />

        <TableRow>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="标题"
                android:gravity="center"
                android:textSize="16sp"
                android:layout_weight="1"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="4dp"
                />
            <TextView
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#e6e6e5"
                />
            <EditText
                android:id="@+id/edit_title"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null"
                android:gravity="top"
                android:layout_weight="5"
                />

        </TableRow>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#e6e6e5" />

        <TableRow>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="外出类型"
                android:gravity="center"
                android:textSize="16sp"
                android:layout_weight="1"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="4dp"
                />
            <TextView
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#e6e6e5"
                />
            <Spinner
                android:id="@+id/sp_outtype"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:entries="@array/outalone_array"
                />

        </TableRow>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#e6e6e5" />

        <TableRow>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="开始时间"
                android:gravity="center"
                android:textSize="16sp"
                android:layout_weight="1"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="4dp"
                />
            <TextView
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#e6e6e5"
                />
            <TextView
                android:id="@+id/edit_startime"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null"
                android:gravity="top"
                android:layout_weight="5"
                />

        </TableRow>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#e6e6e5" />

        <TableRow>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="结束时间"
                android:gravity="center"
                android:textSize="16sp"
                android:layout_weight="1"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="4dp"
                />
            <TextView
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#e6e6e5"
                />
            <TextView
                android:id="@+id/edit_endtime"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null"
                android:gravity="top"
                android:layout_weight="5"
                />

        </TableRow>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#e6e6e5" />
        <TableRow>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="时长"
                android:gravity="center"
                android:textSize="16sp"
                android:layout_weight="1"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="4dp"
                />
            <TextView
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#e6e6e5"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_weight="5"
                android:gravity="center"
                >
            <TextView
                android:id="@+id/edit_days"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="16sp"
                android:layout_weight="1"
                android:inputType="number"
                android:gravity="center"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="天"
                android:layout_weight="1"
                android:gravity="center"
                android:textSize="16sp"
                />
                <TextView
                    android:id="@+id/edit_hours"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textSize="16sp"
                    android:layout_weight="1"
                    android:inputType="number"
                    android:gravity="center"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="小时"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textSize="16sp"
                    />
            </LinearLayout>

        </TableRow>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#e6e6e5" />

        <TableRow>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="审核人"
                android:gravity="center"
                android:textSize="16sp"
                android:layout_weight="1"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                />
            <TextView
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#e6e6e5"
                />
            <Spinner
                android:id="@+id/edit_apply"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_weight="5"
                />

        </TableRow>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#e6e6e5" />
        <TableRow>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="外出事由"
                android:gravity="center"
                android:textSize="16sp"
                android:layout_weight="1"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                />
            <!--<TextView-->
                <!--android:layout_width="1dp"-->
                <!--android:layout_height="match_parent"-->
                <!--android:background="#e6e6e5"-->
                <!--/>-->
            <!--<TextView-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="match_parent"-->
                <!--android:gravity="top"-->
                <!--android:layout_weight="5"-->
                <!--/>-->
        </TableRow>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#e6e6e5" />

    </TableLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            >
            <EditText
                android:id="@+id/edit_absence_cause"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:background="@drawable/corner_text"
                android:hint=" 请输入少于200字"
                android:gravity="top"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:textSize="14sp"
                />
        </LinearLayout>
    </LinearLayout>
    </ScrollView>
</LinearLayout>