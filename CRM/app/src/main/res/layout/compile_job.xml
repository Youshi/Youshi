<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ededed">
    <include
        android:id="@+id/top_1"
        layout="@layout/top_finish"
        />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="5dp"
        android:background="#fff"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:layout_gravity="center"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="当前日期:"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="20dp"
                android:textSize="16sp"
                android:textColor="#2d2c2c"
                />
            <TextView
                android:id="@+id/time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2015-1-5"
                android:layout_gravity="center_vertical"
                android:textSize="16sp"
                />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/icon_right"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                />
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#ededed"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="工作时间:"
                android:textSize="16sp"
                android:layout_marginLeft="20dp"
                android:textColor="#2d2c2c"
                android:gravity="center_vertical"
                />
            <EditText
                android:id="@+id/worktime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:layout_marginLeft="20dp"
                android:inputType="number"
                />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#ededed"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="陌电数量:"
                android:textSize="16sp"
                android:layout_marginLeft="20dp"
                android:textColor="#2d2c2c"
                android:gravity="center_vertical"
                />
            <EditText
                android:id="@+id/amount1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:layout_marginLeft="20dp"
                android:inputType="number"
                />
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#ededed"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="回访客户数量:"
                android:textSize="16sp"
                android:layout_marginLeft="20dp"
                android:textColor="#2d2c2c"
                android:gravity="center_vertical"
                />
            <EditText
                android:id="@+id/amount2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:layout_marginLeft="20dp"
                android:inputType="number"
                />
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#ededed"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="意向客户数量:"
                android:textSize="16sp"
                android:layout_marginLeft="20dp"
                android:textColor="#2d2c2c"
                android:gravity="center_vertical"
                />
            <EditText
                android:id="@+id/amount3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:layout_marginLeft="20dp"
                android:inputType="number"
                />
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#ededed"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="回访客户情况:"
                android:textSize="16sp"
                android:layout_marginLeft="20dp"
                android:textColor="#2d2c2c"
                android:gravity="center_vertical"
                />
            <EditText
                android:id="@+id/condition1"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="@null"
                android:layout_marginLeft="20dp"
                android:gravity="top"
                android:textSize="14sp"
                android:hint="内容不得超过50字"
                />
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#ededed"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="关单情况:"
                android:textSize="16sp"
                android:layout_marginLeft="20dp"
                android:textColor="#2d2c2c"
                android:gravity="center_vertical"
                />
            <EditText
                android:id="@+id/condition2"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="@null"
                android:layout_marginLeft="20dp"
                android:gravity="top"
                android:textSize="14sp"
                android:hint="内容不得超过50字"
                />
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#ededed"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="次日工作安排:"
                android:textSize="16sp"
                android:layout_marginLeft="20dp"
                android:textColor="#2d2c2c"
                android:gravity="center_vertical"
                />
            <EditText
                android:id="@+id/condition3"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="@null"
                android:layout_marginLeft="20dp"
                android:gravity="top"
                android:textSize="14sp"
                android:hint="内容不得超过50字"
                />
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#ededed"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="提交审批人:"
                android:textColor="#2d2c2c"
                android:textSize="16sp"
                android:layout_marginLeft="20dp"
                android:gravity="center_vertical"
                android:layout_marginRight="20dp"
                />
            <Spinner
                android:id="@+id/spi_approver"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                ></Spinner>
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#ededed"
            android:layout_marginBottom="20dp"
            />
    </LinearLayout>
    </ScrollView>
</LinearLayout>